<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <Button
    android:id="@+id/action_mode_none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/action_mode_none"/>

  <Button
    android:id="@+id/action_mode_wrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/action_mode_wrap"/>

  <Button
    android:id="@+id/action_mode_reset"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/action_mode_reset"/>

</LinearLayout>